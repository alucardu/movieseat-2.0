/*Import fonts*/
@import url(https://fonts.googleapis.com/css?family=Lato:300italic);
@import url(https://fonts.googleapis.com/css?family=Oleo\+Script)

/*Import partials*/
@import 'moviesearch'
@import 'watchlist'
@import 'menu'

/*Import Libraries*/
@import 'reset'

/*Import loader*/
@import '../bower_components/SpinKit/css/spinners/3-wave.css'

body, html
  height 100%
  min-height 100%
  background-color rgb(21, 38, 53)
  max-width: 100%
  overflow-x: hidden

.ui-notification
  font-family Lato, sans-serif

// Watchlist load animation override
.sk-wave
  width 100%
  height 120px
  text-align center
  font-size 1px;
  .sk-rect
    background-color white
    margin 0 5px 0 0
    height 100%
    width 18px
    display inline block

:focus
  outline none

a
  text-decoration none
  color: white