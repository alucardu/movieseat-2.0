.overlay
  position absolute
  width 100%
  height 100%
  top 0
  left 0
  background-color rgba(39,31,31,0.67)
  z-index 998
  transition 500ms all ease-out
  cursor: pointer
  &.ng-hide
    opacity 0
#menu
  font-family: Lato, sans-serif
  background-color #312f2f
  display flex
  align-items center
  width 100%
  margin-bottom 5%
  #signout
    padding 1%
    border-radius 5%
    background-color: #ffa500
    margin-left: auto
    color: #fff
    margin-right 1%
    cursor: pointer
    font-size: 1.5em
  #logo
    padding 1%
    font-family 'Oleo Script', cursive
    font-size 5em
    color fff
  #login_container
    box-sizing border-box
    display: flex
    width 100%
    transition 500ms all ease-out
    &.ng-hide
      opacity 0
    #user
      width 100%
      text-align: right
      box-sizing border-box
      //float right
      //position: relative
      //z-index 999
      margin-left: auto;
      color white
      right 5%
      cursor: pointer
      font-size 1.5em
      span
        margin-right 5%
        box-sizing border-box
      #loginBtn
        padding 1%
      #signup
        padding 1%
        border-radius 5%
        background-color: #ffa500
    form
      //padding 5%
      div
        border-bottom 2px solid orange
      .facebook
        color white
        width: 100%
        display: inline-flex
        padding-bottom: 30px;
        margin-bottom: -12px;
        span
          font-size 1.5em
          padding 3%
          background-color #3b5998
          font-family: Tahoma, Verdana, Segoe, sans-serif;
        span
          padding-right 5%
          width 100%
        i
          padding: 0 5%
          margin-right: 5%
          border-right: 2px solid #30487c

    form
      padding 5%
      z-index 999
      left 35%
      background-color #312f2f
      width 30%
      transition 800ms all ease-out
      position absolute
      top 35%
      h1
        display: inline
        margin-left 40%
        text-align: center
        color white
        font-size 1.3em
        background-color: #312f2f
      input
        font-family: Lato, sans-serif
        padding: 5%
        font-style: italic
        font-size: 1.5em
        border: none
        color: rgb(255, 255, 255)
        width: 100%
        box-sizing: border-box
        background-color: rgb(49, 47, 47)
      button
        font-family: Lato, sans-serif
        background-color: #ffa500
        border: none
        padding: 5%
        color: white
        margin: 0 auto
        width: 100%
        font-size 1.5em
        margin-top: 30px
      input
        &:-webkit-autofill
          -webkit-box-shadow 0 0 0 50px #312f2f inset
          -webkit-text-fill-color white
        &:focus
          -webkit-box-shadow 0 0 0 50px #312f2f inset
          -webkit-text-fill-color white
      &.ng-hide
            top -50%
